<?xml version='1.0' encoding='utf-8'?>
<widget id="com.esperanto.learn" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Esperanto in 12 days</name>
    <description>
        La kurso de Esperanto la≈≠ la Zagreba Metodo 
    </description>
    <author email="ahmed.bensaad@outlook.com" href="http://learn.esperanto.com">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="http://localhost:8080/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android"> 
        <icon src="assets/ldpi.png" density="ldpi" />
        <icon src="assets/mdpi.png" density="mdpi" />
        <icon src="assets/hdpi.png" density="hdpi" />
        <icon src="assets/xhdpi.png" density="xhdpi" />
    </platform>
</widget>
